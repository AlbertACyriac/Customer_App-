from customer_ops import add_customer
from ui import display_main_menu

def main():
    while True:
        choice = display_main_menu()
        if choice == '1':
            add_customer()
        elif choice == '2':
            print("Exiting...")
            break
        else:
            print("Invalid choice. Please select 1 or 2.")

if __name__ == "__main__":
    main()


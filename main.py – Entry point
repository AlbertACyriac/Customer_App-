from customer_ops import add_customer
from ui import display_main_menu

def main():
    while True:
        choice = display_main_menu()
        if choice == '1':
            add_customer()
        elif choice == '2':
            print("Exiting...")
            break
        else:
            print("Invalid choice")

if __name__ == "__main__":
    main()

from customer_ops import add_customer

customers = []

# Sample test
add_customer(customers, "John Doe", "john@example.com", "+441234567890")  #  Valid
add_customer(customers, "Jane Smith", "invalid_email", "123456")          #  Invalid
